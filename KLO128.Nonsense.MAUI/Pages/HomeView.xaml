<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="KLO128.Nonsense.MAUI.Pages.HomeView">
    <VerticalStackLayout VerticalOptions="Center" HorizontalOptions="Center">
        <Label 
            Text="Welcome to .NET MAUI!"
             />
        <Entry Text="{Binding InputCode, Mode=TwoWay}" Placeholder="Input Code" />
        <Button Command="{Binding GetTokensCommand}" Text="Get Tokens" />
        <Editor HeightRequest="300" WidthRequest="250" Text="{Binding Tokens}" Placeholder="Tokens"></Editor>
    </VerticalStackLayout>
</ContentView>